<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para el CardView -->
    <style name="PokemonCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <!-- Estilo para el nombre del PokÃ©mon -->
    <style name="PokemonNameTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para los detalles como tipo, peso, altura -->
    <style name="PokemonDetailTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>